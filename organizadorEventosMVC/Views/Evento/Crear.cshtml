@model OrganizadorEventosMVC.Models.Evento

<div class="container mt-5">
    <h2 class="text-center text-primary">Crear Nuevo Evento</h2>

    <form asp-action="Crear" method="post" class="mt-4">
        <div class="mb-3">
            <label for="Nombre" class="form-label">Nombre:</label>
            <input type="text" id="Nombre" name="Nombre" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="Lugar" class="form-label">Lugar:</label>
            <input type="text" id="Lugar" name="Lugar" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="Fecha" class="form-label">Fecha:</label>
            <input type="date" id="Fecha" name="Fecha" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="Descripcion" class="form-label">Descripción:</label>
            <textarea id="Descripcion" name="Descripcion" class="form-control" rows="4" required></textarea>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success">Crear Evento</button>
            <a href="/Evento/Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>