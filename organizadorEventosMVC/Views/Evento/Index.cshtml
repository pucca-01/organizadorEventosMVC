@model IEnumerable<OrganizadorEventosMVC.Models.Evento>

<h2 class="text-center my-4">Lista de Eventos</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Lugar</th>
            <th>Fecha</th>
            <th>Descripción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var evento in Model)
        {
            <tr>
                <td>@evento.Nombre</td>
                <td>@evento.Lugar</td>
                <td>@evento.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@evento.Descripcion</td>
            </tr>
        }
    </tbody>
</table>
